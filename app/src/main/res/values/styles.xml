<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">

        <!-- Text color of Overflow Menu items -->
        <item name="android:textColorPrimary">#4f4f4f</item>

        <!-- Background color of Overflow Menu -->
        <item name="android:background">#FFFCFFF6</item>
    </style>

    <!--Toolbar Theme-->
    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--TextColor of ToolBar title-->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!--Color of overflow menu and navigationDrawer Icon-->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>
